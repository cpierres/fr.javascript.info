    "version": "0.2.0",
    "configurations": [
    {
        "name": "Attach to Chrome",
        "port": 5500,
        "request": "attach",
        "type": "chrome",
        "webRoot": "${workspaceFolder}"
    },
        {
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "name": "Launch Extension",
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "preLaunchTask": "npm",
            "request": "launch",
            "type": "extensionHost"
        },
        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "msedge",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        }

    ]
}